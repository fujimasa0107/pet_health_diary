<div class="login-page">
  <div class="form">
    <%= form_with(model: resource, url: session_path(resource_name), local: true, method: :post) do |f| %>
      <h2>ログインページ</h2>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "form-button" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>